      <%= link_to 'כניסה', new_user_session_path, class: "btn btn-main" %>
      <%= link_to 'הצטרפות', new_user_registration_path, class: "btn btn-main" %>
    <% else %>
      <%= link_to 'התנתק', destroy_user_session_path, class: "btn btn-main", :method => :delete %>
    <% end %>
</div>
