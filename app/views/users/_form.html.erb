<div class="sessioncon">
  <%= link_to image_tag("logo.png"), root_path%>
  <div class="sessionform">
    <div class="sessionheadline p-4">
      <% if controller.action_name == "create" || controller.action_name == "new"  %>
        <h2 class="headline">פתיחת משתמש חדש</h2>
        <% elsif controller.action_name == "edit" %>
        <h2 class="headline">עריכת משתמש</h2>
        <% end %>
  </div>
    <%= simple_form_for(@user) do |f| %>
      <%= f.error_notification %>
      <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

      <div class="form-inputs">
        <% if @current_user.iscaller? %>
        <%= f.input :email, disabled: true %>
        <%= f.input :lastname, disabled: true %>
        <%= f.input :name, disabled: true %>
        <%= f.input :adminlevel, label: "רמת ניהול", collection: [['מתנדב',0],['טלפן',1],['מנהל',2],['מנהל ארצי',3]], include_blank: false, :input_html => { :class => 'js-select' }, disabled: true %>
        <% else %>
        <%= f.input :email %>
        <%= f.input :lastname %>
        <%= f.input :name %>
        <%= f.input :adminlevel, label: "רמת ניהול", collection: [['מתנדב',0],['טלפן',1],['מנהל',2],['מנהל ארצי',3]], include_blank: false, :input_html => { :class => 'js-select' } %>
        <% end %>
        <%= f.input :gender, as: :select, collection: ['אישה','גבר'],include_blank: false, input_html: { class: 'js-select', autocomplete: "gender" }%>
        <%= f.association :city, label: "ישוב", include_blank: false, :input_html => { :class => 'js-selectable' }  %>
        <%= f.input :address %>
        <%= f.input :phone %>
        <%= f.input :israelid %>
        <%= f.input :langauges, selected: @user.langauges, collection: ["אנגלית","רוסית","גרמנית","פורטוגזית"], input_html: {multiple: true, class: 'js-selectable-w80'} %>
        <%= f.input :pastvolunteervolume, as: :string %>
        <%= f.input :pastvolunteer %>
        <%= f.input :keepvolunteer %>
        <%= f.input :volunteerusefull %>
        <%= f.input :availability %>
        <%= f.input :workfield %>
        <%= f.input :specality %>
        <%= f.input :helpcalls %>
        <%= f.input :solidaritycampus %>
        <%= f.input :campus %>
        <%= f.input :campusactivity %>
        <%= f.input :helplocal %>
        <%= f.input :solidaritylocaladdress %>
        <%= f.input :studentactivist %>
        <%= f.input :intrestedinsolidarity %>
        <%= f.input :localwhatsapp %>
        <%= f.input :helpoperations %>
        <%= f.input :student %>
        <%= f.input :healthcheck, label: "הצהרת בריאות" %>
        <%= f.input :joinlocal %>
        <%= f.association :help_option, label: "אופציה עזרה", as: :check_boxes, label_method: :descriptionvol, value_method: :id %>
        <div class="form-group">
        <%= f.label :lastcontact%>
          <%= f.text_field :lastcontact, data:{ provide:'datepicker' }, class: "w-80" %>
        </div>
        <%= f.input :contactname %>
        <%= f.input :othermentions %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "שמירה", class: "btn btn-sm btn-flatgreen" %>
        <%= link_to 'חזרה', users_path, class: "btn btn-sm btn-flatgreen" %>
      <% end %>
    </div>
  </div>
</div>
