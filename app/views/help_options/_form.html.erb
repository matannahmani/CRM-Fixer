
<%= simple_form_for(@help_option) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :descriptionvol, label: "תצוגת מתנדב" %>
    <%= f.input :descriptioncall, label: "תצוגת קריאה" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "שמירה", class: "btn btn-sm btn-flat" %>
  </div>
<% end %>
