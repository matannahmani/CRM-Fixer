<% if I18n.locale == :he %>
  <%- if controller_name == 'sessions' %>
    <%= link_to "#{I18n.t "login_btn"}", new_session_path(resource_name), class: "btn btn-nav btn-nav-active border-leftt" %><br />
  <% end %>
  <%- if controller_name == 'registrations' %>
    <%= link_to "#{I18n.t "login_btn"}", new_session_path(resource_name), class: "btn btn-nav border-leftt" %><br />
    <%= link_to "#{I18n.t "signup_btn"}", new_registration_path(resource_name), class: "btn btn-nav btn-nav-active" %><br />
  <% end %>
<% else %>
  <%- if controller_name == 'sessions' %>
    <%= link_to "#{I18n.t "login_btn"}", new_session_path(resource_name), class: "btn btn-nav btn-nav-active border-rightt" %><br />
  <% end %>
  <%- if controller_name == 'registrations' %>
    <%= link_to "#{I18n.t "login_btn"}", new_session_path(resource_name), class: "btn btn-nav border-rightt" %><br />
    <%= link_to "#{I18n.t "signup_btn"}", new_registration_path(resource_name), class: "btn btn-nav btn-nav-active" %><br />
  <% end %>
<% end %>
<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%#= link_to "התחבר", new_session_path(resource_name), class: "btn btn-nav" %><br />
  <%= link_to "#{I18n.t "signup_btn"}", new_registration_path(resource_name), class: "btn btn-nav" %><br />
<% end %>

<% if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%#= link_to "איפוס סיסמה?", new_password_path(resource_name), class: "btn btn-nav" %><br />
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "לא קיבלת הסבר אישור?", new_confirmation_path(resource_name), class: "btn btn-nav" %><br />
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "לקבלת הסבר שיחרור החשבון?", new_unlock_path(resource_name), class: "btn btn-nav" %><br />
<% end %>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to "התחברות עם #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), class: "btn btn-nav" %><br />
  <% end %>
<% end %>
