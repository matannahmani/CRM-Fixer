<%- if controller_name != 'sessions' %>
  <%= link_to "התחבר", new_session_path(resource_name), class: "btn btn-flatgreen" %><br />
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "הצטרפות", new_registration_path(resource_name), class: "btn btn-flatgreen" %><br />
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "איפוס סיסמה?", new_password_path(resource_name), class: "btn btn-flatgreen" %><br />
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "לא קיבלת הסבר אישור?", new_confirmation_path(resource_name), class: "btn btn-flatgreen" %><br />
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "לקבלת הסבר שיחרור החשבון?", new_unlock_path(resource_name), class: "btn btn-flatgreen" %><br />
<% end %>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to "התחברות עם #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), class: "btn btn-flatgreen" %><br />
  <% end %>
<% end %>
