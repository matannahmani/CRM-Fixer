<div class="sessioncon">
  <%= link_to image_tag("logo.png"), root_path%>
  <div class="sessionform">
    <div class="sessionheadline">
      <%= render "devise/shared/links" %>
    </div>
    <h2><%= t :login %></h2>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean, boolean_style: :inline if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "#{I18n.t "login_btn"}", class: "btn btn-sm btn-flatgreen" %>
      </div>
      <div class="f-down">
        <%= link_to "#{I18n.t "forgot_password"}", new_password_path(resource_name), class: "btn btn-nav btn-nav-active" %><br />
      </div>
    <% end %>
  </div>
</div>
