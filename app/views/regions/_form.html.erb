<div class="sessioncon">
  <%= link_to image_tag("logo.png"), root_path%>
  <div class="sessionform">
    <div class="sessionheadline p-4">
      <% if controller.action_name == "create" || controller.action_name == "new"  %>
        <h2 class="headline"><%= "#{I18n.t "create_reigon"}" %></h2>
        <% elsif controller.action_name == "edit" %>
        <h2 class="headline"><%= "#{I18n.t "update_region"}" %></h2>
        <% end %>
</div>
  <%= simple_form_for(@region) do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

    <div class="form-inputs">
      <%= f.input :name %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "#{I18n.t "accept"}", class: "btn btn-sm btn-flatgreen" %>
      <%= link_to "#{I18n.t "return_btn"}", regions_path,class: "btn btn-sm btn-flatgreen" %>
    </div>
  <% end %>
</div>
