<div class="homecon">
  <%= link_to image_tag("logo.png"), root_path%>
  <div class="index-page">
    <h2 class="headline-text">כל הישובים הקיימות במערכת</h2>
    <%= simple_form_for @city, url: cities_path, method: "GET", html: { class: 'form-inline' } do |f| %>
      <%= f.input :name, as: :select, selected: @cities_name, collection: City.all, label_method: :name, :include_blank => "הצג הכל" , input_html: { class: 'js-selectable-w80', multiple: true } %>
      <%= f.input :region, as: :select, selected: @regions_id, collection: Region.all, label_method: :name, :include_blank => "הצג הכל" , input_html: { class: 'js-selectable-w80', multiple: true } %>
    <%= f.submit "חפש", class: "btn btn-main btn-sm" %>
    <% end%>
      <table class="table table-responsive-xl">
        <thead>
          <tr>
            <th scope="col">שם</th>
            <th scope="col">איזור</th>
            <th colspan="3">פעולות</th>
          </tr>
        </thead>

        <tbody>
          <% @cities.each do |city| %>
            <tr>
              <td><%= city.name %></td>
              <td><%= city.region.name unless city.region.nil?%></td>
              <td><%= link_to 'צפייה', city %></td>
              <td><%= link_to 'עריכה', edit_city_path(city) %></td>
              <td><%= link_to 'מחיקה', city, method: :delete, data: { confirm: 'אתה בטוח?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <br>
      <div class="d-flex justify-content-center flex-wrap"">
        <%= link_to 'יצירת יישוב', new_city_path,class: "btn btn-sm btn-main" %>
        <%= link_to 'מסך ראשי', adminpanel_path, class: "btn btn-sm btn-main" %>
        <button class="btn btn-sm btn-main" id="exportexl">EXPORT</button>
    </div>
  </div>
</div>
