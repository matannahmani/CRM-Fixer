<p id="notice"><%= notice %></p>

<p>
  <strong>שם:</strong>
  <%= @call.name %>
</p>

<p>
  <strong>שם משפחה:</strong>
  <%= @call.lastname %>
</p>

<p>
  <strong>טלפון:</strong>
  <%= @call.phone %>
</p>

<p>
  <strong>כתובת:</strong>
  <%= @call.address %>
</p>

<p>
  <strong>ישוב:</strong>
  <%= @call.city.name %>
</p>

<p>
  <strong>איימל:</strong>
  <%= @call.email %>
</p>

<p>
  <strong>תיאור:</strong>
  <%= @call.description %>
</p>

<p>
  <strong>בדיקת בריאות:</strong>
  <%= @call.healthcheck ? "כן" : "לא" %>
</p>

<p>
  <% if !@call.user.nil? %>
  <strong>שם מתנדב:</strong>
  <%= @call.user.name%>
  <% else %>
  <strong>כרגע לא נמצא מתנדב</strong>
  <% end %>
</p>
<% if !current_user.nil? && current_user.adminlevel > 4 %>
<%= link_to 'ערוך', edit_call_path(@call) %>
<%= link_to 'חזרה', calls_path %>
<% end %>