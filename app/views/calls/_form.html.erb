
<%= simple_form_for(@call) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name, label: "שם פרטי" %>
    <%= f.input :lastname, label: "שם משפחה" %>
    <%= f.input :phone, label: "טלפון" %>
    <%= f.input :address, label: "כתובת מלאה" %>
    <%= f.association :city, label: "ישוב" %>
    <%= f.association :user, label_method: :fullname, label: "מתנדב" if params["action"] == "edit" %>
    <%= f.input :email, label: "איימל", error: true %>
    <%= f.input :description, label: "תיאור" %>
    <% if params["action"] == "edit" %>
      <div class="healthcheck">
        <h3>לקיחת קריאה מותנת באישור הצהרת בריאות אנא עיין בהצרה לפני אישור</h3>
        <a href="https://docs.google.com/document/d/1PrIatn7BX4g-bIdg-VWE32uamt7lESICIXgYk7I0lew/edit?usp=sharing" target="_blank">הצהרת בריאות</a>
      </div>
    <% end %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "אישור", class: "btn btn-sm btn-flatgreen" %>
    <%= link_to 'חזרה', calls_path, class: "btn btn-sm btn-flatgreen" %>
  </div>
<% end %>
