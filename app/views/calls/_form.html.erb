
<%= simple_form_for(@call) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :lastname %>
    <%= f.input :phone %>
    <%= f.input :address %>
    <%= f.association :city %>
    <%= f.input :email %>
    <%= f.input :description %>
    <%= f.input :healthcheck %>
    <%#= f.association :user %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
