<p id="notice"><%= notice %></p>

<h1>Calls</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Lastname</th>
      <th>Phone</th>
      <th>Address</th>
      <th>City</th>
      <th>Email</th>
      <th>Description</th>
      <th>Healthcheck</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @calls.each do |call| %>
      <tr>
        <td><%= call.name %></td>
        <td><%= call.lastname %></td>
        <td><%= call.phone %></td>
        <td><%= call.address %></td>
        <td><%= call.city %></td>
        <td><%= call.email %></td>
        <td><%= call.description %></td>
        <td><%= call.healthcheck %></td>
        <td><%= call.user %></td>
        <td><%= link_to 'Show', call %></td>
        <td><%= link_to 'Edit', edit_call_path(call) %></td>
        <td><%= link_to 'Destroy', call, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Call', new_call_path %>
